{
  "manifest_version": 3,
  "name": "Where Did My RAM Go? üêë",
  "version": "1.4.1",
  "description": "Track your tabs and see how much RAM they're consuming. Because sheep (RAM) can really add up!",
  "minimum_chrome_version": "139.0.7258.155",
  "author": "Tab Counter Extension",
  "homepage_url": "https://github.com/yourusername/tabCounter",
  "permissions": [
    "tabs",
    "processes",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Where Did My RAM Go? üêë",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
